    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls"> My URLs </a>
        <a class="nav-item nav-link" href="/urls/new"> Create New URL </a>
      </div>
    </div>
    <% if (username === undefined) { %>
      <form class="form-inline" method="POST" action="/login">
        <input
          class="form-control float-right"
          type="text"
          name="username"
          placeholder="Username"
          style="width: 300px; float: right; clear: both; margin-right: 15px"
        />
        <button type="submit" class="btn btn-outline-dark">Login</button>
      </form>
    <% } else { %>
      <form class="form-inline" method="POST" action="/logout">
        <label style="margin-right: 15px">Logged in as: <%= username %></label>
        <button type="submit" class="btn btn-outline-dark">Logout</button>
      </form>
    <% } %>
  </nav>
</header>
